<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cines"
    android:orientation="vertical"
    android:background="@color/graybg">

    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cines"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_ubicacion"
            android:layout_marginStart="40dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:text="Cd. Obregón, Sonora, Méx."
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:background="@drawable/round_button_gris"
            app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
            app:drawableTint="@color/white" />

        <ImageButton
            android:id="@+id/btn_buscar"
            android:layout_marginLeft="40sp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="none"
            android:src="@drawable/ic_baseline_search_48" />

        <ImageButton
            android:id="@+id/btn_filtro"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="none"
            android:src="@drawable/ic_baseline_tune_48" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:background="@drawable/estrenos_border"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_cinepolis"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Cinépolis Bella Vista"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blvd. Rodolfo Elías Calles #1750, 85000 Cd. Obregón, Son."
            android:textColor="@color/white"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="-210dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2D, 3D, Sala Junior"
            android:textColor="@color/white"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="-210dp"
            />

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#E4D22E"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="-200dp"
            android:rating="4.5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="55dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Calificaciones"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="-190dp"
            android:layout_marginTop="125dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Menú"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="-60dp"
            />

        <ImageView
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:src="@drawable/mapa_cine1"
            android:layout_marginLeft="-350dp"
            android:layout_marginTop="155dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Mapa"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="255dp"
            android:layout_marginLeft="-200dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/estrenos_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_cinepolis" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Cinépolis Bella Vista"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-210dp"
            android:layout_marginTop="35dp"
            android:text="Plaza Sendero, Cd. Obregón, Son."
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-210dp"
            android:layout_marginTop="60dp"
            android:text="2D, 3D, Sala Junior"
            android:textColor="@color/white" />

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-200dp"
            android:layout_marginTop="110dp"
            android:numStars="5"
            android:progressTint="#E4D22E"
            android:rating="4.5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="85dp"
            android:src="@drawable/ic_menu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-190dp"
            android:layout_marginTop="125dp"
            android:text="Ver Calificaciones"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="125dp"
            android:text="Menú"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-350dp"
            android:layout_marginTop="155dp"
            android:src="@drawable/mapa_cine2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-200dp"
            android:layout_marginTop="255dp"
            android:text="Ver Mapa"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>