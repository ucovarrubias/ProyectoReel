<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graybg">

    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cartelera"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_ubicacion"
            android:layout_marginStart="40dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:text="Cd. Obregón, Sonora, Méx."
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:background="@drawable/round_button_gris"
            app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
            app:drawableTint="@color/white" />

        <ImageButton
            android:id="@+id/btn_buscar"
            android:layout_marginLeft="40sp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="none"
            android:src="@drawable/ic_baseline_search_48" />

        <ImageButton
            android:id="@+id/btn_filtro"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="none"
            android:src="@drawable/ic_baseline_tune_48" />

    </LinearLayout>

    <GridLayout
        android:layout_marginTop="25dp"
        android:padding="15dp"
        android:id="@+id/gl_cartelera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris"
        android:orientation="horizontal"
        android:columnCount="3">

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/godzilla" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Godzilla vs Kong"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acción"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="4.5" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/caos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Caos: El Inicio"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aventura"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciencia Ficción"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="4" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/protector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El Protector"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acción"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="3.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/uuups2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UUUPS! 2 La Aventura Continua"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animación"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="4.5" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/finmundo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El Día del Fin del Mundo"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Acción"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thriller"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@color/white"/>

            </LinearLayout>


            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="4" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/eltunel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El Túnel"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thriller"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acción"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="3.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/tomyjerry"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tom y Jerry"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animación"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="4.5" />

        </LinearLayout>


        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/pinocho" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pinocho"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantasía"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drama"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="4" />


        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/juegaconmigo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juega Conmigo"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terror"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/white"/>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#E4D22E"
                android:rating="3.5" />

        </LinearLayout>

    </GridLayout>

</LinearLayout>
