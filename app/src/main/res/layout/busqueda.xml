<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grisBlack"
    tools:context=".Ubicacion2">

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/nomUbi"
        android:textColor="@color/white"
        android:layout_gravity="left"
        android:layout_marginLeft="30sp"
        android:textSize="30sp"
        app:drawableLeftCompat="@drawable/ic_baseline_location_on_24"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gris"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@color/grisesito"
        android:orientation="vertical">

    <TextView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:text="@string/desc_ubi"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textAlignment="center"

    />
        <TextView
            android:id="@+id/ubicacion_1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40dp"
            android:drawablePadding="5dp"
            android:text="@string/nombrep"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pais"
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background=""
            android:hint="México         ▼"
            android:layout_marginRight="5sp"
            android:textColorHint="@color/white"
            android:layout_marginTop="-55dp"
            android:textSize="15sp" />

        <Button
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/gris" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:text="@string/nombreEst"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ubicacion"
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background=""
            android:hint="Sonora         ▼"
            android:layout_marginRight="5sp"
            android:textColorHint="@color/white"
            android:layout_marginTop="-55dp"
            android:textSize="15sp" />

        <Button
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@color/gris" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:text="@string/nombreCiu"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ciudad"
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background=""
            android:hint="Cd. Obregón ▼"
            android:layout_marginRight="5sp"
            android:textColorHint="@color/white"
            android:layout_marginTop="-55dp"
            android:textSize="15sp" />

        <Button
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@color/gris" />


    </LinearLayout>


</LinearLayout>